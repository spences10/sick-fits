{
  "name": "sick-fits-frontend",
  "version": "1.0.58",
  "description": "Sick Fits! An example React, GraphQL, Next and Apollo application.",
  "keywords": [],
  "author": "Scott Spence <spences10apps@gmail.com> (https://scottspence.me/)",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "dev": "next -p 7777",
    "build": "next build",
    "start": "next start",
    "test": "NODE_ENV=test jest --watch",
    "heroku-postbuild": "next build",
    "format": "pretty-quick",
    "precommit": "pretty-quick --staged"
  },
  "dependencies": {
    "apollo-boost": "^0.4.7",
    "apollo-client": "^2.6.8",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-styled-components": "^1.10.7",
    "date-fns": "^2.12.0",
    "downshift": "^5.2.2",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.10.3",
    "lodash.debounce": "^4.0.8",
    "next": "^9.0.0",
    "next-with-apollo": "^5.0.0",
    "nprogress": "^0.2.0",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-adopt": "^0.6.0",
    "react-apollo": "^3.1.5",
    "react-dom": "^16.5.2",
    "react-stripe-checkout": "^2.6.3",
    "react-transition-group": "^4.0.0",
    "styled-components": "^4.0.0",
    "waait": "^1.0.2"
  },
  "devDependencies": {
    "babel-jest": "25.5.1",
    "babel-plugin-module-resolver": "4.0.0",
    "casual": "1.6.2",
    "enzyme-to-json": "3.4.4",
    "graphql-tools": "5.0.0",
    "jest": "25.5.4",
    "jest-transform-graphql": "2.1.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest"
    }
  },
  "//": "This is out babel config, I prefer this over a .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  }
}
